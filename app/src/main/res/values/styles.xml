<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="PxUsage">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupMenuStyle">@style/ToolbarTheme.Popup</item>
        <item name="android:popupMenuStyle">@style/ToolbarTheme.Popup</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="actionOverflowMenuStyle">@style/ToolbarTheme.Popup</item>
        <item name="materialIconColor">#ffffff</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="actionDropDownStyle">@style/ToolbarTheme.DropDown</item>
    </style>

    <style name="ToolbarTheme.DropDown" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarTheme.Popup" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/overflow_menu</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="Dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCard">
        <item name="android:background">#ffffff</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>