<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#333333"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingStart="10dip"
        android:paddingEnd="10dip"
        android:paddingTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:textColor="#ffffff"/>


        <LinearLayout
            android:id="@+id/tz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fixTimezone"
                android:textColor="#ffffff"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>


            <net.steamcrafted.materialiconlib.MaterialIconView
                android:contentDescription="@null"
                app:materialIcon="minus_circle"
                android:id="@id/minus"
                app:materialIconColor="#fff"
                app:materialIconSize="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/timezonefix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="number"
                android:textColor="#ffffff"/>

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:contentDescription="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:materialIcon="plus_circle"
                android:id="@+id/plus"
                app:materialIconColor="#fff"
                app:materialIconSize="40dp"/>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/minAdj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <View
                android:id="@id/center"
                android:layout_width="20dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>


            <RelativeLayout
                android:id="@id/imsak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/center">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    android:id="@id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_alignParentRight="true"
                    app:materialIcon="plus_circle"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"/>

                <EditText
                    android:id="@id/nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_toLeftOf="@id/plus"
                    android:layout_toRightOf="@id/minus"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/fajr"
                    android:textColor="#ffffff"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    app:materialIcon="minus_circle"
                    android:id="@id/minus"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/gunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/center"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    android:id="@id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_alignParentRight="true"
                    app:materialIcon="plus_circle"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"/>

                <EditText
                    android:id="@id/nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_toLeftOf="@id/plus"
                    android:layout_toRightOf="@id/minus"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/sun"
                    android:textColor="#ffffff"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    app:materialIcon="minus_circle"
                    android:id="@id/minus"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/ogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@id/imsak"
                android:layout_below="@id/imsak">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    android:id="@id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_alignParentRight="true"
                    app:materialIcon="plus_circle"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"/>

                <EditText
                    android:id="@id/nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_toLeftOf="@id/plus"
                    android:layout_toRightOf="@id/minus"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/zuhr"
                    android:textColor="#ffffff"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    app:materialIcon="minus_circle"
                    android:id="@id/minus"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/ikindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imsak"
                android:layout_toRightOf="@id/center">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    android:id="@id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_alignParentRight="true"
                    app:materialIcon="plus_circle"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"/>

                <EditText
                    android:id="@id/nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_toLeftOf="@id/plus"
                    android:layout_toRightOf="@id/minus"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/asr"
                    android:textColor="#ffffff"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    app:materialIcon="minus_circle"
                    android:id="@id/minus"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/aksam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/ogle"
                android:layout_toLeftOf="@id/center">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    android:id="@id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_alignParentRight="true"
                    app:materialIcon="plus_circle"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"/>

                <EditText
                    android:id="@id/nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/minus"
                    android:layout_toLeftOf="@id/plus"
                    android:layout_toRightOf="@id/minus"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/maghrib"
                    android:textColor="#ffffff"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    app:materialIcon="minus_circle"
                    android:id="@id/minus"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/yatsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/aksam"
                android:layout_alignBottom="@id/aksam"
                android:layout_toRightOf="@id/center">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/minus"
                    android:layout_alignBottom="@id/minus"
                    android:layout_alignParentRight="true"
                    app:materialIcon="plus_circle"
                    android:id="@id/plus"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"/>

                <EditText
                    android:id="@id/nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/minus"
                    android:layout_alignBottom="@id/minus"
                    android:layout_toLeftOf="@id/plus"
                    android:layout_toRightOf="@id/minus"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/ishaa"
                    android:textColor="#ffffff"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:contentDescription="@null"
                    app:materialIcon="minus_circle"
                    android:id="@id/minus"
                    app:materialIconColor="#fff"
                    app:materialIconSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>