<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background2"
            android:fillViewport="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/MyCard"
            android:gravity="center">

            <ImageView
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:layout_margin="5dp"
                android:src="@drawable/launcher_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="@string/appName"/>


            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:textColor="#555555"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:text="@string/version"/>

            <TextView
                android:id="@+id/developer"
                android:layout_width="wrap_content"
                android:textColor="#555555"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:text="metinkale38"/>

        </LinearLayout>

        <LinearLayout style="@style/MyCard">

            <TextView
                android:text="@string/support_development"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="reportBug">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="bug"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@+id/icon"/>

                <TextView
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/report_bug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/summary"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:text="@string/report_bug_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="mail">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="email"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/sendMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@id/summary"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:text="@string/sendMail_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="translate"
                android:background="?android:attr/selectableItemBackground">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="flag"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/translate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@id/summary"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:text="@string/translate_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="rate"
                android:padding="5dp"
                android:background="?android:attr/selectableItemBackground">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="star"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@id/summary"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:text="@string/rate_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="beta"
                android:padding="5dp"
                android:background="?android:attr/selectableItemBackground">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="test_tube"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/beta_tester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@id/summary"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:text="@string/beta_tester_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="github"
                android:padding="5dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="bottom">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="github_circle"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@id/summary"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:text="@string/github_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="donate"
                android:padding="5dp"
                android:background="?android:attr/selectableItemBackground">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="gift"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/donate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@id/summary"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:text="@string/donate_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout style="@style/MyCard">

            <TextView
                android:text="@string/license"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="licenses"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="bottom">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="file"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/license_sum"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="LibLicences"
                android:padding="5dp"
                android:background="?android:attr/selectableItemBackground">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:materialIcon="file"
                    app:materialIconColor="#555555"
                    app:materialIconSize="24dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="center"
                    android:id="@id/icon"/>

                <TextView
                    android:id="@id/title"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/icon"
                    android:layout_toEndOf="@+id/icon"
                    android:text="@string/library_licenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/library_licenses_sum"
                    android:layout_toRightOf="@+id/icon"
                    android:textSize="12sp"
                    android:layout_toEndOf="@+id/icon"
                    android:textColor="#555555"
                    android:layout_below="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>